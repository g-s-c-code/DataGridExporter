@page "/"
@inject IJSRuntime JSRuntime
@inject System.Net.Http.HttpClient Http

<MudCard Square="true"
		 Style="min-height: 100vh;">
	<MudCardHeader Class="d-flex align-center justify-space-between mb-0 pb-0">
		<MudText Color="Color.Primary">
			<h1>DataGrid Exporter</h1>
		</MudText>
		<MudButton Color="Color.Primary"
				   EndIcon="@Icons.Material.Outlined.FileDownload"
				   IconSize="Size.Large"
				   OnClick="ExportToExcel"
				   Ripple="true"
				   Style="font-weight: bold;"
				   Variant="Variant.Filled">
			Export Data (Demo)
		</MudButton>
	</MudCardHeader>
	<MudCardContent>
		<MudDataGrid @ref="_grid"
					 Bordered=true
					 Class="border-solid border-2 mud-border-primary pa-4"
					 Dense="true"
					 Elevation="4"
					 FixedHeader="true"
					 Height="236px"
					 Items="@_items"
					 T="Row">
			<Columns>
				<PropertyColumn Property="x => x.column_1" Title="Demo Data" HeaderStyle="font-weight: bold;" />
				<PropertyColumn Property="x => x.column_1" Title="Demo Data" HeaderStyle="font-weight: bold;" />
				<PropertyColumn Property="x => x.column_1" Title="Demo Data" HeaderStyle="font-weight: bold;" />
				<PropertyColumn Property="x => x.column_1" Title="Demo Data" HeaderStyle="font-weight: bold;" />
				<PropertyColumn Property="x => x.column_1" Title="Demo Data" HeaderStyle="font-weight: bold;" />
			</Columns>
		</MudDataGrid>
	</MudCardContent>
	<MudCardActions Class="d-block">
		<MudPaper Class="d-flex justify-end flex-grow-1 ma-2"
				  Elevation="0">
			<MudButton Color="Color.Primary"
					   EndIcon="@Icons.Material.Outlined.ContentCopy"
					   IconSize="Size.Large"
					   OnClick="CopyCode"
					   Ripple="true"
					   Style="white-space: nowrap; font-weight: bold;"
					   Variant="Variant.Text">
				Copy Code
			</MudButton>
		</MudPaper>
		<MudPaper Class="border-solid border-2 mud-border-primary ma-2 pa-4" Elevation="4" id="code">
			<pre>@codeContent</pre>
		</MudPaper>
	</MudCardActions>
</MudCard>

@code {
	public record Row(int column_1, int column_2, int column_3, int column_4, int column_5);

	private string codeContent = string.Empty;
	private MudDataGrid<Row> _grid = default!;
	private List<Row> _items = new List<Row>();
	private async Task ExportToExcel() => await _grid.ExportDataGrid(JSRuntime, "export.xlsx");

	private async Task CopyCode()
	{
		await JSRuntime.InvokeVoidAsync("copyCode");
	}

	protected override async Task OnInitializedAsync()
	{
		codeContent = await Http.GetStringAsync("DataGridExporterCode.txt");

		for (var i = 0; i < 100; i++)
		{
			_items.Add(new Row(i, i, i, i, i));
		}
	}
}